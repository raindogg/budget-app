<div class="container text-center">
  <div class="row">
    <div class="col-xs-12">
      <% if @prior_months.length < 1 %>
      <h1>Looks like you don't have any expenses to display.</h1>
      <%= link_to "Start budgeting!", "/months/new" %>
      <% else %>
      <h1>Current month:</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="holder">
        <% if @current_month %>
          <h1><%= link_to "#{@current_month.name}, #{@current_month.year}", "/months/#{@current_month.id}" %></h1>
        <% else %>
          <h1>No current month. <%= link_to "Start one?", "/months/new"  %></h1>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row text-center">
    <div class="col-xs-12">
    <%= link_to "Start a new month", "/months/new" %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <h2>Prior months:</h2>
    </div>
      <% @prior_months.each do |month| %>
      <div class="col-xs-4">
        <div class="holder">
          <h3><%= link_to "#{month.name}, #{month.year}", "/months/#{month.id}" %></h3>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>